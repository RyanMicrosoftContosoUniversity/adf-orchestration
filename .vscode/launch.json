{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Debug client.py with args",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/client.py",
            "console": "integratedTerminal",
            "args": ["run", "plCopyData", "file=SalesLTProduct.csv", "sourcePath=wwi"]
        }
    ]
}